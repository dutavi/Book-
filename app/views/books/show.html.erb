<%
  list_images = [url_for(@book.cover)]
  @book.related_images.each { |image| list_images.push(url_for(image)) }
%>
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators dim-background">
    <% list_images.each_with_index do |image_url, index| %>
        <li data-target="#carouselExampleIndicators" data-slide-to="<%= index %>" class="<%= index.zero? ? 'active' : '' %>"></li>
    <% end %>
  </ol>
  <div class="carousel-inner mh-400px">
    <% list_images.each_with_index do |image_url, index| %>
      <div class="carousel-item mh-400px <%= index.zero? ? 'active' : '' %>">
        <%= image_tag image_url, class:"d-block w-100", alt: "Image #{index}" %>
      </div>
    <% end %>
    <div class="row">
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>
  </div>
  <div class="row mt-5">
    <div class="col-12">
      <div class="jumbotron">
        <h2><%= @book.title %></h2>
        <p class="lead"><%= @book.description %></p>
        <hr class="my-4">
        <p><%= @book.user.email %></p>
        <%= link_to 'Back', books_path, class: "btn btn-primary btn-sm" %> |
        <%= link_to 'Edit', edit_book_path(@book), class: "btn btn-secondary btn-sm" %>
      </div> 
    </div> 
  </div>
</div>

